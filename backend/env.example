# Environment configuration template for ChatSQL Backend
# Copy this file to .env in the root directory and fill in your actual values

# ChromaDB Base Path Configuration
# For Docker: use /app (container root)
# For local development: use . (current directory) or absolute path
CHROMADB_BASE_PATH=/app

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/chatsql

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Security
SECRET_KEY=your-secret-key-change-in-production

# Development Mode
DEVELOPMENT_MODE=true
